int main()
{
	int a[5][5];
	int (*p)[4];
	p = a;//int(*) [5]是a的类型,int(*)[4]是p的类型
	printf("%p,%d\n",&p[4][2] - &a[4][2],&p[4][2] - &a[4][2]);//p[4][2] == *(*(p+4)+2)
	return 0;
}
